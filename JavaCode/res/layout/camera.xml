<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    
    > 
	 <FrameLayout 
	    android:id="@+id/camera_preview" 
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent" 
	    android:layout_weight="1" 
	    /> 
	 
	 <RelativeLayout 
	     android:id="@+id/after_capture"
	     android:layout_height="80dp"
	     android:layout_width="fill_parent"
	     android:orientation="horizontal"
	     android:paddingLeft="20dp"
	     android:paddingRight="20dp"
	     android:paddingTop="5dp"
	     android:background="@drawable/background_light_grey"
	     
	     
	     >
	 
	     
	     <Button 
	         android:id="@+id/set_poi"
	         android:layout_height="wrap_content"
	         android:layout_width="wrap_content"
	         android:background="@drawable/addpoi"
	         android:layout_alignParentLeft="true"
	         android:text="获取"
	         android:textColor="#ffffff"
	         android:gravity="bottom|center_horizontal"
	        />
	     <Button 
	         android:id="@+id/btn_capture"
	         android:layout_height="60dp"
	         android:layout_width="60dp"
	         android:background="@drawable/cameracapture"
	         android:layout_centerHorizontal="true"
	         />
	     <Button 
	         android:id="@+id/draw_poi"
	         android:layout_height="wrap_content"
	         android:layout_width="wrap_content"
	         android:background="@drawable/picdetail"
	         android:layout_alignParentRight="true"
	       	 android:text="查看"
	         android:textColor="#ffffff"
	         android:gravity="bottom|center_horizontal"	
	   
	        />

	 </RelativeLayout> 
</LinearLayout>